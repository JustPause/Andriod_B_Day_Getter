<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Themes.BDayGetter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!--        Primary brand color.-->

        <item name="colorPrimary">@color/primaryDark</item>
        <item name="colorPrimaryVariant">#FF0000FF</item>
        <item name="colorOnPrimary">@color/textDark</item>

        <!--        Secondary brand color.-->

        <item name="colorSecondary">@color/secondaryDark</item>
        <item name="colorSecondaryVariant">#FFFF0000</item>
        <item name="colorOnSecondary">#FF00FF00</item>

        <!--        Status bar color.-->

        <item name="android:statusBarColor">?/attr/colorPrimary</item>
        <item name="android:background">@color/backgroundDark</item>

    </style>

    <style name="SCREEN">
        <item name="android:background">@color/backgroundDark</item>
    </style>

    <style name="TEXT">
        <item name="android:background">@color/textDark</item>
    </style>

    <style name="BUTTON">
        <item name="android:background">@android:color/holo_blue_dark</item>
        <item name="android:textColor">@color/textDark</item>
    </style>

</resources>